{
    "extends": [],
    "branches": [
        {
            "name": "main",
            "channel": "latest"
        },
        {
            "name": "dev",
            "prerelease": "dev",
            "channel": "dev"
        }
    ],
    "repositoryUrl": "https://github.com/Phenixis/life_os",
    "tagFormat": "v${version}",
    "dryRun": false,
    "ci": false,
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "docs",
                        "release": false
                    },
                    {
                        "type": "test",
                        "release": false
                    },
                    {
                        "type": "chore",
                        "release": false
                    },
                    {
                        "scope": "no-release",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "üöÄ Features",
                            "hidden": false
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes",
                            "hidden": false
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance Improvements",
                            "hidden": false
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring",
                            "hidden": false
                        },
                        {
                            "type": "style",
                            "section": "üíé Styles",
                            "hidden": false
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation",
                            "hidden": false
                        },
                        {
                            "type": "test",
                            "section": "üß™ Tests",
                            "hidden": false
                        },
                        {
                            "type": "chore",
                            "section": "üîß Maintenance",
                            "hidden": true
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json"
                ],
                "message": "chore(release): ${nextRelease.version} [local]"
            }
        ]
    ]
}
