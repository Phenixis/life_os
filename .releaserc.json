{
    "branches": [
        {
            "name": "main",
            "channel": "latest"
        }
    ],
    "repositoryUrl": "https://github.com/Phenixis/life_os",
    "tagFormat": "v${version}",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "docs",
                        "release": false
                    },
                    {
                        "type": "test",
                        "release": false
                    },
                    {
                        "type": "chore",
                        "release": false
                    },
                    {
                        "scope": "no-release",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "üöÄ Features",
                            "hidden": false
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes",
                            "hidden": false
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance Improvements",
                            "hidden": false
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring",
                            "hidden": false
                        },
                        {
                            "type": "style",
                            "section": "üíé Styles",
                            "hidden": false
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation",
                            "hidden": false
                        },
                        {
                            "type": "test",
                            "section": "üß™ Tests",
                            "hidden": false
                        },
                        {
                            "type": "chore",
                            "section": "üîß Maintenance",
                            "hidden": true
                        }
                    ]
                },
                "writerOpts": {
                    "commitLimit": 25,
                    "commitGroupsSort": "title",
                    "commitsSort": ["scope", "subject"],
                    "noteGroupsSort": "title",
                    "maxSubjectLength": 80,
                    "breakingChangeTitle": "üí• BREAKING CHANGES",
                    "groupBy": "type",
                    "transform": {
                        "truncateSubject": true,
                        "truncateBody": true,
                        "maxBodyLength": 500
                    }
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "echo 'Preparing release ${nextRelease.version}' && ./scripts/update-readme-version.sh ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json",
                    "README.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]"
            }
        ],
        [
            "@semantic-release/github",
            {
                "successComment": "üéâ This has been resolved in version ${nextRelease.version} :tada:",
                "failComment": false,
                "failTitle": false,
                "labels": false,
                "releasedLabels": false
            }
        ]
    ]
}
